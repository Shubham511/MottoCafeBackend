<html>
    <head>
        <style>
            table{
                font-family: Arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td,th{border: 1px solid #444;
                text-align: center;
                padding: 8px;
            }
           
        </style>
    </head>
    <body>
        <h3 style="text-align: center">Motto Cafe Application</h3>
        <table>
            <tr>
                <th>Name : <%= name %></th>
                <th>Email : <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number : <%= contactNumber %></th>
                <th>Payment Method : <%= paymentMethod %></th>
            </tr>
        </table>

        <h3>Product details</h3>
        <table>
            <tr>
                <td>Name</td>
                <td>Category</td>
                <td>Quantity</td>
                <td>Price</td>
                <td>Sub Total</td>
            </tr>
            <% if(productDetails.length > 0) { %>
                <% productDetails.forEach( product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= product.total %></td>
                    </tr>
                    <%});%>
                    <%}%>
        </table>

        <h3>Total : <%= totalAmount %></h3>

        <h2>Thank You For Visting. Please Visit Again !!</h2>
    </body>
</html>